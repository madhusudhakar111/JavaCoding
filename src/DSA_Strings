// 1. Reverse String
		
		 String str = "Hello World";
		 char charArr[] = str.toCharArray();
		 int left = 0;
		 int right = charArr.length-1;
		 
		 while(left < right ) {
			 char temp = charArr[right];
			 charArr[right] = charArr[left];
			 charArr[left] = temp;
			 left++;
			 right--;
		 }
		 
		 System.out.println(Arrays.toString(charArr));

// 2. Check if a string is a palindrome
		
		 String str = "madam";
		 char charArr[] = str.toLowerCase().toCharArray();
		 int left = 0;
		 int right = charArr.length-1;
		 boolean isPolindrome = true;
		 
		 while(left < right ) {
			 
			 if(charArr[right] != charArr[left]) {
				 isPolindrome = false;
			 }
			 left++;
			 right--;
		 }
		 
		 System.out.println(isPolindrome);  // true

// 3. Count vowels and consonants in a string
		
		String str = "Hello World";
		 char charArr[] = str.toLowerCase().toCharArray();
		 int owvelscount = 0;
		 int consonantscount = 0;
		 
		 for(char c : charArr ) {
			 
			if (Character.isLetter(c))  {
				 if(c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
					 owvelscount++;
				 } else {
					 consonantscount++;
				 }
		 	}
		 }
		 
		 System.out.println(owvelscount);
		 System.out.println(consonantscount);

// 4. Check if a string can be rearranged to form a palindrome
		
		  String str = "carrace";
		  
		  char ch[] = str.toCharArray();
		  
		  Map<Character, Integer> map = new LinkedHashMap<Character, Integer>();
		  
		  
		  for(char c: ch) {
			  map.put(c, map.getOrDefault(c, 0)+1);
		  }
		  
		  int oddCount = 0;
		  
		 for(int v : map.values()) {
			if(v % 2 != 0 ) {
				oddCount++;
			}
		 }
		
		 
		 if(oddCount <= 1) {
			System.out.println("string can be rearranged to form a palindrome"); 
		 } else {
			 System.out.println("string can't be rearranged to form a palindrome"); 
		 }
